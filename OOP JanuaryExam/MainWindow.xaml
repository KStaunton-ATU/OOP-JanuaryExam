<Window x:Name="mainWindow" x:Class="OOP_JanuaryExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_JanuaryExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="mainWindow_Loaded">
    <Grid x:Name="radBtnAllRobots">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="227*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Filter" HorizontalAlignment="Left" Margin="106,42,0,0" VerticalAlignment="Top" Height="34" Width="55" FontWeight="Bold" FontSize="18"/>
        <Label Grid.Column="2" Content="Robot List" HorizontalAlignment="Center" VerticalAlignment="Top" Height="34" Width="112" FontSize="18" FontWeight="Bold" Margin="0,42,0,0"/>
        <Label Grid.Column="3" Content="Robot Details" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top" Height="31" Width="133" FontSize="18" FontWeight="Bold"/>
        <RadioButton x:Name="radBtnAllRobots1" Content="ALL ROBOTS" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>
        <RadioButton x:Name="radBtnHousehold" Content="HOUSEHOLD" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center"/>
        <RadioButton x:Name="radBtnDelivery" Content="DELIVERY" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="3" VerticalAlignment="Center"/>
        <Image Margin="164,18,12,18" Grid.Row="1" Source="/robot.png" Stretch="Fill"/>
        <Image Margin="164,18,12,18" Grid.Row="2" Source="/household-robot.png" Stretch="Fill"/>
        <Image Margin="164,18,12,18" Grid.Row="3" Source="/delivery-robot.png" Stretch="Fill"/>
        <ListBox x:Name="lbxRobotList" Grid.Column="2" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.RowSpan="3" Margin="0,0,0,18" SelectionChanged="lbxRobotList_SelectionChanged"/>
        <TextBox x:Name="tbxRobotDetails" Grid.Column="3" HorizontalAlignment="Left" Margin="31,18,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" Height="242" Grid.RowSpan="3"/>
        <Button x:Name="btnCharge" Grid.Column="3" Content="Charge" HorizontalAlignment="Center" Margin="0,80,0,0" Grid.Row="3" VerticalAlignment="Top" Width="153" Click="btnCharge_Click"/>

    </Grid>
</Window>
